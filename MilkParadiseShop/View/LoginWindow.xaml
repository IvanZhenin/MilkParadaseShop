<Window x:Class="MilkParadiseShop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MilkParadiseShop"
        mc:Ignorable="d"
        MinHeight="600" MinWidth="450" MaxHeight="600" 
        MaxWidth="450" WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="HotPink" Offset="1"/>
                <GradientStop Color="Coral" Offset="0.8"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Border CornerRadius="180 0 180 0" Margin="5" Background="AntiqueWhite"/>
        <Frame Name="LoginDataPanelFrame" Style="{StaticResource FrameAuto}"/>
    </Grid>
</Window>
