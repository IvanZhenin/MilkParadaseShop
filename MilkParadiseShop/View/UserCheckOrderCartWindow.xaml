<Window x:Class="MilkParadiseShop.View.UserCheckOrderCartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilkParadiseShop.View"
        mc:Ignorable="d"
        Title="Список товаров заказа" MinHeight="300" MinWidth="550" MaxHeight="300" 
        MaxWidth="550" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid Name="DataGridProductsInOrder" IsReadOnly="True" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding ProdId}"/>
                <DataGridTextColumn Header="Название" Binding="{Binding ProdName}"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
